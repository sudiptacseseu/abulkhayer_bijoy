<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:bind="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="obj"
			type="com.android.abulkhayerbijoy.model.OutletDetail" />
	</data>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:id="@+id/outletHeader"
	android:layout_margin="4dp"
	android:paddingTop="12dp"
	android:paddingBottom="12dp"
	android:background="@drawable/curved_button_not_visited">

	<TextView android:id="@+id/textView_OutletName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="দোকানের নাম"
		android:padding="4dp"
		android:textSize="18sp"
		android:textStyle="bold"
		android:maxLines="3"
		android:gravity="center"
		android:layout_weight="1"/>

	<TextView
		android:id="@+id/textView_OwnerName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="মালিকের নাম"
		android:text="@{obj.ownerName}"
		android:layout_marginTop="12dp"
		android:padding="2dp"
		android:maxLines="3"
		android:gravity="center"/>

	<TextView
		android:id="@+id/textView_PhoneNumber"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="ফোন নাম্বার"
		android:text="@{obj.contactNo}"
		android:textStyle="bold"
		android:paddingTop="2dp"
		android:paddingBottom="12dp"
		android:maxLines="3"
		android:gravity="center"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:layout_marginStart="12dp"
		android:layout_marginEnd="12dp"
		android:background="@color/text_color">
	</View>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="4dp"
			android:text="বাকিঃ"
			android:textSize="18sp"
			android:textStyle="bold"
			android:maxLines="3"
			android:gravity="center"/>

		<TextView
            android:id="@+id/textView_DueValue"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="4dp"
			android:text="৳ ০০.০০"
			android:textSize="18sp"
			android:textStyle="bold"
			android:maxLines="3"
			android:gravity="center"/>
	</LinearLayout>

</LinearLayout>

</layout>
